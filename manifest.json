{
  "manifest_version": 2,
  "name": "College Website Automation",
  "version": "1.0",
  "description": "Automate login and OTP retrieval for the college website.",
  "permissions": [
    "storage",
    "activeTab",
    "https://*/",
    "http://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://erp.iitkgp.ac.in/*"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@example.com"
    }
  }
}
